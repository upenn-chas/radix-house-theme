{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">

<div class="header-container">
<div class="header">
 <div class="right-region">
    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
 </div>

<div class="branding">
  <div class="container">
    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}
  </div>
</div>
<div class="menu_bar">
{% block menu_bar %}
      {% if page.menu_bar %}
        {{ page.menu_bar }}
      {% endif %}
    {% endblock %}
</div>
</div>
</div> 

