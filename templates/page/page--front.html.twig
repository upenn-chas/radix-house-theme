<main class="row" id="house_main" >
<a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
<div class="slideshow_area">
{% block slideshow_area %}
      {% if page.slideshow_area %}
        {{ page.slideshow_area }}
      {% endif %}
    {% endblock %}
</div>
<div class="body-content col-lg-8 col-12 order-lg-2">
    {% if page.header %}
      <header class="page__header ">
        <div class="container">
          {{ page.header }}
        </div>
      </header>
    {% endif %}
    {% if page.content %}
      <div class="page__content">
        <div class="container">
FOOBAR
          {{ page.content }}
        </div>
      </div>
    {% endif %}
</div>
<div class="sidebar col-lg-4 col-12 order-lg-1">
    {% if page.sidebar %}
      <div class="sidebar__content">
          {{ page.sidebar }}
      </div>
    {% endif %}
<div>
</main>

  {% if page.footer %}
    <footer class="page__footer">
      <div class="container"><div class="row">
          {{ page.footer }}
      </div></div>
    </footer>
  {% endif %}
</div>


